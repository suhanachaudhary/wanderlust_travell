<% layout("/layouts/boilerplate.ejs")-%>
<body class="container-fluid">
    <h2 class="create">Create new listing...</h2>
    <form method="POST" action="/listings" class="createForm needs-validation" enctype="multipart/form-data" novalidate>

        <div class="col-md-12">
          <label for="input" class="form-label">Title:</label>
          <input type="text" class="form-control" id="input" name="listing[title]" placeholder="Enter title" required>
          <div class="valid-feedback">
            Destiny name must be Looks good!
          </div>
        </div><br>

        <div class="col-md-12">
          <label for="inputp" class="form-label">Description:</label>
          <textarea rows="3" type="text" class="form-control" id="inputp" name="listing[description]" placeholder="Description" required></textarea>
          <div class="invalid-feedback">
            Please give the brief description about your destiny!
          </div>
        </div><br>

        <div class="col-12">
          <label for="inputi" class="form-label">Upload Image:</label>
          <input type="file" class="form-control" id="inputi" name="listing[image]" placeholder="Image path" required>
        </div><br>

        <div class="row">
          <div class="col-12">
              <label for="inputA" class="form-label">Price: </label>
              <input  class="form-control" id="inputA" name="listing[price]" placeholder="Price" required>
          </div>
        </div><br>

        <div class="row">
          <div class="col-md-6">
            <label for="address" class="form-label">City:</label>
            <input type="text" class="form-control" id="address" name="listing[location]" placeholder="City, Location" required>
            <div class="invalid-feedback">
              Please provide a valid city.
            </div>
          </div>
        <div class="col-md-6">
          <label for="inputState" class="form-label">Country:</label>
          <input type="text" class="form-control" id="inputState" name="listing[country]" placeholder="country" required>
          <div class="invalid-feedback">
            Please provide a valid country.
          </div>
        </div>
        </div><br>
          
        <div class="col-12 mt-2">
          <button class="btn btn-primary btn1">Add</button>
        </div><br>
      </form>
</body>      
